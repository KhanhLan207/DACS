@model IEnumerable<TicketBus.Models.Trip>
@using Microsoft.EntityFrameworkCore
@{
    ViewData["Title"] = "Tìm chuyến xe";
}

<div class="container mt-4">
    <!-- Stepper -->
    @await Html.PartialAsync("_BookingStepper", 1)

    <!-- Hero section with search form -->
    <div class="card bg-light mb-4 border-0 shadow-sm">
        <div class="card-body p-4">
            <h1 class="h3 mb-4 text-primary">Tìm chuyến xe</h1>
            
            <form method="get" action="@Url.Action("Search", "Booking")" class="row g-3">
                <div class="col-md-4">
                    <label for="from" class="form-label">Điểm đi</label>
                    <select class="form-select" id="from" name="from">
                        <option value="">-- Chọn điểm đi --</option>
                        @foreach (var city in ViewBag.Cities)
                        {
                            if (ViewBag.SelectedFrom == city.NameCity)
                            {
                                <option value="@city.NameCity" selected="selected">@city.NameCity</option>
                            }
                            else
                            {
                                <option value="@city.NameCity">@city.NameCity</option>
                            }
                        }
                    </select>
                </div>
                
                <div class="col-md-4">
                    <label for="to" class="form-label">Điểm đến</label>
                    <select class="form-select" id="to" name="to">
                        <option value="">-- Chọn điểm đến --</option>
                        @foreach (var city in ViewBag.Cities)
                        {
                            if (ViewBag.SelectedTo == city.NameCity)
                            {
                                <option value="@city.NameCity" selected="selected">@city.NameCity</option>
                            }
                            else
                            {
                                <option value="@city.NameCity">@city.NameCity</option>
                            }
                        }
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label for="date" class="form-label">Ngày đi</label>
                    <input type="date" class="form-control" id="date" name="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" 
                           value="@(ViewBag.SelectedDate != null ? ((DateTime)ViewBag.SelectedDate).ToString("yyyy-MM-dd") : DateTime.Today.ToString("yyyy-MM-dd"))">
                </div>
                
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Tìm</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Search results -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Kết quả tìm kiếm</h5>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary active">Tất cả</button>
                    <button type="button" class="btn btn-outline-secondary">Buổi sáng</button>
                    <button type="button" class="btn btn-outline-secondary">Buổi chiều</button>
                    <button type="button" class="btn btn-outline-secondary">Buổi tối</button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <!-- Sorting options -->
            <div class="bg-light border-bottom p-3">
                <div class="row">
                    <div class="col-md-6">
                        <span class="fw-bold">@Model.Count() chuyến xe được tìm thấy</span>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-secondary active">
                                <i class="bi bi-sort-down"></i> Giờ khởi hành
                            </button>
                            <button type="button" class="btn btn-outline-secondary">
                                <i class="bi bi-sort-numeric-down"></i> Giá vé
                            </button>
                            <button type="button" class="btn btn-outline-secondary">
                                <i class="bi bi-sort-down-alt"></i> Đánh giá
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- List of trips -->
            @if (Model.Any())
            {
                <div class="trip-list">
                    @foreach (var trip in Model)
                    {
                        var availableSeats = ViewBag.AvailableSeats[trip.Id];
                        
                        <div class="trip-item border-bottom p-3">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(trip.Coach.Brand.Image) ? "/images/default-brand.png" : trip.Coach.Brand.Image)" 
                                             alt="@trip.Coach.Brand.NameBrand" class="rounded" width="60" height="60">
                                        <div class="ms-3">
                                            <h6 class="mb-0">@trip.Coach.Brand.NameBrand</h6>
                                            <span class="badge bg-info text-white">@trip.Coach.VehicleType.NameType</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="trip-route">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-circle-fill text-success me-2"></i>
                                            <div>
                                                <div class="fw-bold">@trip.DepartureTime.ToString(@"hh\:mm")</div>
                                                <div class="text-muted">@trip.Route.StartCity?.NameCity</div>
                                            </div>
                                        </div>
                                        
                                        <div class="trip-duration d-flex">
                                            <div class="vr mx-2" style="height: 30px; margin-left: 7px;"></div>
                                            <div class="text-muted small">@trip.Route.TravelTime?.ToString(@"hh\:mm") giờ</div>
                                        </div>
                                        
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-geo-alt-fill text-danger me-2"></i>
                                            <div>
                                                <div class="fw-bold">
                                                    @{
                                                        var arrivalTime = trip.DepartureTime.Add(trip.Route.TravelTime ?? TimeSpan.Zero);
                                                    }
                                                    @arrivalTime.ToString(@"hh\:mm")
                                                </div>
                                                <div class="text-muted">@trip.Route.EndCity?.NameCity</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-2 text-center">
                                    <div class="trip-info">
                                        <div class="mb-1">
                                            <i class="bi bi-person-fill"></i> 
                                            <span class="fw-bold">@availableSeats ghế trống</span>
                                        </div>
                                        <div class="mb-1">
                                            <i class="bi bi-calendar3"></i> 
                                            <span>@trip.DepartureDate.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="rating">
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-half text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-3 text-end">
                                    <div class="trip-price mb-2">
                                        @{
                                            var dbContext = Url.ActionContext.HttpContext.RequestServices
                                                .GetService<TicketBus.Data.ApplicationDbContext>();
                                            
                                            var price = dbContext.Prices
                                                .Where(p => p.IdSchedule == trip.RouteId)
                                                .OrderByDescending(p => p.PriceValue)
                                                .FirstOrDefault();
                                        }
                                        <h4 class="text-danger mb-0">@(price?.PriceValue.ToString("N0") ?? "0") VNĐ</h4>
                                        <span class="text-muted small">Giá đã bao gồm thuế</span>
                                    </div>
                                    
                                    <a href="@Url.Action("SelectSeats", "Booking", new { tripId = trip.Id })" 
                                       class="btn btn-primary @(availableSeats <= 0 ? "disabled" : "")">
                                        Chọn ghế
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-search" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">Không tìm thấy chuyến xe nào</h4>
                    <p class="text-muted">Vui lòng thử lại với các điều kiện tìm kiếm khác</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Hiệu ứng cho các nút filter
            $('.btn-group .btn').click(function() {
                $(this).siblings().removeClass('active');
                $(this).addClass('active');
            });
            
            // Có thể thêm các xử lý khác ở đây (filter by time, sort, etc.)
        });
    </script>
} 