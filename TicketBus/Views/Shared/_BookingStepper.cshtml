@model int

<div class="booking-progress mb-4">
    <div class="row text-center">
        <div class="col-3">
            <div class="step @(Model >= 1 ? "completed" : "")">
                <div class="step-icon">
                    <i class="bi bi-search"></i>
                </div>
                <div class="step-text">Tìm chuyến</div>
            </div>
        </div>
        <div class="col-3">
            <div class="step @(Model == 2 ? "active" : Model > 2 ? "completed" : "")">
                <div class="step-icon">
                    <i class="bi bi-chair"></i>
                </div>
                <div class="step-text">Chọn ghế</div>
            </div>
        </div>
        <div class="col-3">
            <div class="step @(Model == 3 ? "active" : Model > 3 ? "completed" : "")">
                <div class="step-icon">
                    <i class="bi bi-person"></i>
                </div>
                <div class="step-text">Thông tin</div>
            </div>
        </div>
        <div class="col-3">
            <div class="step @(Model == 4 ? "active" : "")">
                <div class="step-icon">
                    <i class="bi bi-credit-card"></i>
                </div>
                <div class="step-text">Thanh toán</div>
            </div>
        </div>
    </div>
    <div class="progress mt-2">
        <div class="progress-bar" role="progressbar" style="width: @(12.5 + 25 * (Model - 1))%" aria-valuenow="@(12.5 + 25 * (Model - 1))" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>

<style>
    /* Stepper styles */
    .booking-progress .step {
        position: relative;
        padding: 10px;
    }
    
    .booking-progress .step-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #f0f0f0;
        color: #888;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 5px;
        font-size: 1.2rem;
    }
    
    .booking-progress .step.active .step-icon {
        background-color: #007bff;
        color: white;
    }
    
    .booking-progress .step.completed .step-icon {
        background-color: #28a745;
        color: white;
    }
</style> 