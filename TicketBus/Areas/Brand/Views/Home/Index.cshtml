@model dynamic
@using TicketBus.Models

@{
    ViewData["Title"] = "Trang quản lý hãng xe";
    Layout = "~/Areas/Brand/Views/Shared/_Layout.cshtml";
    var brandInfo = ViewBag.BrandInfo as Brand;
}

<!-- Phần thông báo từ TempData -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Nội dung chính -->
<div class="brand-main">
    <!-- Sidebar (Profile) -->
    <div class="brand-sidebar">
        <h3>Thông tin hãng xe</h3>
        <div class="profile-info">
            @if (brandInfo != null)
            {
                <p><strong>Tên hãng:</strong> @brandInfo.NameBrand</p>
                @if (!string.IsNullOrEmpty(brandInfo.BrandCode))
                {
                    <p><strong>Mã hãng:</strong> @brandInfo.BrandCode</p>
                }
                <p><strong>Số điện thoại:</strong> @brandInfo.PhoneNumber</p>
                <p><strong>Địa chỉ:</strong> @brandInfo.Address</p>
                <p><strong>Trạng thái:</strong> @(brandInfo.State == BrandState.HoatDong ? "Hoạt động" : "Không hoạt động")</p>
            }
            else
            {
                <p class="text-danger">Hãng xe chưa được phê duyệt hoặc không tồn tại.</p>
            }
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="brand-content">
        <!-- Quản lý xe -->
        <div class="management-section">
            <h3>Quản lý xe</h3>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Quản lý xe</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Quản lý các xe của hãng, đăng ký xe mới hoặc xem danh sách xe đã đăng ký.</p>
                    <a asp-page="/RegisterCoach" class="btn btn-primary">Đăng ký xe mới</a>
                    <a href="#" class="btn btn-outline-primary ms-2 disabled" aria-disabled="true">Danh sách xe (Sắp có)</a>
                </div>
            </div>
        </div>

        <!-- Quản lý tuyến -->
        <div class="management-section">
            <h3>Quản lý tuyến</h3>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Quản lý tuyến</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Đăng ký và quản lý các tuyến đường cho xe của hãng.</p>
                    <a href="#" class="btn btn-outline-primary disabled" aria-disabled="true">Quản lý tuyến (Sắp có)</a>
                </div>
            </div>
        </div>

        <!-- Quản lý lịch trình -->
        <div class="management-section">
            <h3>Quản lý lịch trình</h3>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Quản lý lịch trình</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Tạo và quản lý lịch trình cho các xe của hãng.</p>
                    <a href="#" class="btn btn-outline-primary disabled" aria-disabled="true">Quản lý lịch trình (Sắp có)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Nếu cần thêm JavaScript cho giao diện này, bạn có thể thêm ở đây -->
}