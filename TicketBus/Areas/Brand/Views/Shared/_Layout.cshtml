<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketBus</title>
    <link href="~/css/brand-styles.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="brand-container">
        <!-- Header -->
        <header class="brand-header">
            <div class="header-content d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-bus-alt fa-2x me-3 text-primary"></i>
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="notification-bell position-relative">
                    <i class="fas fa-bell fa-lg text-light" id="notificationBell" style="cursor: pointer;"></i>
                    @if (ViewBag.Notifications != null && ((List<Notification>)ViewBag.Notifications).Any())
                    {
                        var notificationCount = ((List<Notification>)ViewBag.Notifications).Count;
                        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill">
                            @notificationCount
                        </span>
                    }
                    <!-- Dropdown thông báo -->
                    <div class="notification-dropdown" id="notificationDropdown">
                        @if (ViewBag.Notifications != null && ((List<Notification>)ViewBag.Notifications).Any())
                        {
                            foreach (var notification in (List<Notification>)ViewBag.Notifications)
                            {
                                <div class="notification-item d-flex justify-content-between align-items-center">
                                    <span>@notification.Message</span>
                                    <form asp-area="Brand" asp-controller="Home" asp-action="MarkNotificationAsRead" asp-route-id="@notification.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Đã đọc</button>
                                    </form>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="notification-item text-center">
                                <span>Không có thông báo mới.</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

        <!-- Footer -->
        <footer class="brand-footer">
            <div class="footer-content text-center">
                <a asp-area="Brand" asp-controller="Home" asp-action="GoToHomePage" class="btn btn-secondary mb-3">Quay về trang chủ</a>
                <p class="text-light mb-1">&copy; 2025 TicketBus - Hệ thống quản lý vé xe</p>
                <p class="text-light mb-0">Liên hệ: <a href="mailto:support@ticketbus.com" class="text-light text-decoration-underline">support@ticketbus.com</a></p>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Hiển thị/ẩn dropdown khi nhấn vào chuông
            $('#notificationBell').click(function () {
                $('#notificationDropdown').toggleClass('show');
            });

            // Ẩn dropdown khi nhấn ra ngoài
            $(document).click(function (e) {
                if (!$(e.target).closest('.notification-bell').length) {
                    $('#notificationDropdown').removeClass('show');
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>